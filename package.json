{
  "name": "next-with-split",
  "version": "0.0.0-development",
  "description": "This is a plugin for split testing (AB testing) in Next.js.",
  "main": "./build/index.js",
  "module": "./esm/main.js",
  "types": "./esm/main.d.ts",
  "files": [
    "build",
    "esm"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aiji42/next-with-split.git"
  },
  "keywords": [
    "next.js",
    "next",
    "react",
    "plugins",
    "vercel",
    "ab-test",
    "split-test",
    "ab test",
    "split test"
  ],
  "author": "aiji42 <aiji42@gmail.com> (https://twitter.com/aiji42_dev)",
  "bugs": {
    "url": "https://github.com/aiji42/next-with-split/issues"
  },
  "homepage": "https://github.com/aiji42/next-with-split#readme",
  "scripts": {
    "lint": "eslint ./src/**/*.ts ./src/*.ts",
    "format": "prettier './src/**/*.ts' './src/*.ts' --write",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc && ts-add-module-exports && tsc -p tsconfig.esm.json",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "dependencies": {
    "app-root-path": "^3.0.0"
  },
  "peerDependencies": {
    "next": ">=12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/app-root-path": "^1.2.4",
    "@types/cookie": "^0.5.1",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "babel-jest": "^28.1.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "next": "^12.1.6",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.3",
    "semantic-release-cli": "^5.4.4",
    "ts-add-module-exports": "^1.0.0",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}

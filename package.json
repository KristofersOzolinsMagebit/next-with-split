{
  "name": "next-with-split",
  "version": "0.0.0-development",
  "description": "This is a plugin for split testing (AB testing) in Next.js.",
  "main": "./build/index.js",
  "module": "./esm/main.js",
  "types": "./esm/main.d.ts",
  "bin": {
    "next-with-split": "./build/script.js"
  },
  "files": [
    "build",
    "esm"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aiji42/next-with-split.git"
  },
  "keywords": [
    "next.js",
    "next",
    "react",
    "plugins",
    "vercel",
    "ab-test",
    "split-test",
    "ab test",
    "split test"
  ],
  "author": "aiji42 <aiji42@gmail.com> (https://twitter.com/aiji42_dev)",
  "bugs": {
    "url": "https://github.com/aiji42/next-with-split/issues"
  },
  "homepage": "https://github.com/aiji42/next-with-split#readme",
  "scripts": {
    "lint": "eslint ./src/**/*.ts ./src/*.ts",
    "format": "prettier './src/**/*.ts' './src/*.ts' --write",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc && ts-add-module-exports && tsc -p tsconfig.esm.json",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "dependencies": {
    "yargs": "^17.3.1"
  },
  "peerDependencies": {
    "next": ">=12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/cookie": "^0.4.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-jest": "^27.4.6",
    "eslint": "<8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.2.2",
    "next": "^12.0.8",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "semantic-release-cli": "^5.4.4",
    "ts-add-module-exports": "^1.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
